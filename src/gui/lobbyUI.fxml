<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LobbyUI">
    <children>
        <VBox prefHeight="400.0" prefWidth="300.0" spacing="5.0">
            <children>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#createRoomAction" text="%create_room"/>
                        <Button mnemonicParsing="false" onAction="#joinRoomAction" text="%join_room"/>
                    </children>
                </HBox>
                <TextField fx:id="textField"/>
                <Label text="%players"/>
                <ListView fx:id="playerList" prefHeight="305.0" prefWidth="280.0"/>
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <Button disable="true" fx:id="startGameButton" onAction="#startGameAction" mnemonicParsing="false"
                            text="%start"/>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
